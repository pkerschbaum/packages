{
  "name": "@pkerschbaum/codemod-apply-full-paths-to-imports",
  "version": "0.0.1",
  "homepage": "https://github.com/pkerschbaum/packages/tree/main/packages/codemod-apply-full-paths-to-imports",
  "bugs": {
    "url": "https://github.com/pkerschbaum/packages/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pkerschbaum/packages",
    "directory": "packages/codemod-apply-full-paths-to-imports"
  },
  "license": "MIT",
  "author": "Patrick Kerschbaum <patrick.kerschbaum@gmail.com>",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "files": [
    "dist/**",
    "!dist/**/*.d.ts.map"
  ],
  "scripts": {
    "build": "pnpm run internal:compile",
    "dev": "pnpm run build --watch --preserveWatchOutput",
    "internal:compile": "tsc -p ./tsconfig.project.json",
    "lint": "pnpm run lint:file .",
    "lint:file": "eslint --max-warnings 0",
    "lint:fix": "pnpm run lint --fix",
    "nuke": "pnpm run nuke:artifacts && del-cli node_modules",
    "nuke:artifacts": "del-cli dist \"*.tsbuildinfo\"",
    "test": "nyc --nycrc-path ./test/nyc.config.cjs node --enable-source-maps ./node_modules/@playwright/test/cli.js test --config=test/playwright.config.ts --tsconfig=./tsconfig.project.json",
    "test:watch": "PWTEST_WATCH=1 pnpm run test"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "commander": "^12.1.0",
    "minimatch": "^10.0.1",
    "tiny-invariant": "^1.3.3",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@pkerschbaum/playwright-utils": "workspace:*",
    "@playwright/test": "^1.47.0",
    "@types/node": "^20",
    "nyc": "^15.1.0",
    "ts-expose-internals": "^5.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
