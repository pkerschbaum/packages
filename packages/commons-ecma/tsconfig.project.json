{
  "extends": "@pkerschbaum/config-typescript/tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "module": "CommonJS",
    "paths": {
      "#pkg/*": ["./src/*"]
    },
    "rootDir": "./src",

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    /* disable verbatimModuleSyntax because this is a CJS package */
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"]
}
